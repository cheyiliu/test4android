<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <test.com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="string/shimmer啊伐斯蒂芬"
        android:textColor="#444"
        android:textSize="50sp" />

    <test.com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/shimmer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="string/shimmer阿道夫给"
        android:textColor="#444"
        android:textSize="50sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="toggleAnimation"
        android:text="string/toggle_animation" />
    
        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="gotoTest2"
        android:text="gotoTest2" />

</LinearLayout>