<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pptv_tv_background" >

    <RelativeLayout
        android:id="@+id/whole_container"
        android:layout_width="470dp"
        android:layout_height="267dp"
        android:layout_marginLeft="201dp"
        android:layout_marginTop="103dp"
        android:focusable="true" >

        <RelativeLayout
            android:id="@+id/bg_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:focusable="false" >

            <ImageView
                android:id="@+id/bg_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/pptv_shuangtu_bg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/outter_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:focusable="false" >

            <ImageView
                android:id="@+id/outter_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/pptv_shuangtu_header2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:focusable="false" >

            <ImageView
                android:id="@+id/inner_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:focusable="false"
                android:src="@drawable/pptv_shuangtu_inner2" />

            <RelativeLayout
                android:id="@+id/inner_txt_container"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_gradient_dark"
                android:focusable="false"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/inner_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:focusable="false"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="闺蜜时代"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp" >
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/whole_container1"
        android:layout_width="470dp"
        android:layout_height="267dp"
        android:layout_marginLeft="701dp"
        android:layout_marginTop="103dp"
        android:focusable="true" >

        <RelativeLayout
            android:id="@+id/bg_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:focusable="false" >

            <ImageView
                android:id="@+id/bg_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/pptv_shuangtu_bg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/outter_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:focusable="false" >

            <ImageView
                android:id="@+id/outter_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/pptv_shuangtu_header3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:focusable="false" >

            <ImageView
                android:id="@+id/inner_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:focusable="false"
                android:src="@drawable/pptv_shuangtu_inner3" />

            <RelativeLayout
                android:id="@+id/inner_txt_container"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_gradient_dark"
                android:focusable="false"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/inner_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:focusable="false"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="同桌的你"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp" >
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="another view may has focus" />

</FrameLayout>